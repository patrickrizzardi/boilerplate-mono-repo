{
  "name": "app",
  "author": "Patrick Rizzardi <patrick@redact.digital> (https://redact.digital)",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun vite --host",
    "build": "vue-tsc --noEmit && bun vite build",
    "lint": "eslint . --quiet --fix --exit-on-fatal-error --config eslint.config.mts --cache",
    "lint:check": "eslint . --quiet --exit-on-fatal-error --config eslint.config.mts",
    "lint:performance": "TIMING=25 eslint . --quiet --exit-on-fatal-error --config eslint.config.mts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "autoprefixer": "^10.4.21",
    "eslint-plugin-vue": "^10.4.0",
    "postcss": "^8.5.6",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.12",
    "vite": "^7.1.2",
    "vue-tsc": "^3.0.5"
  }
}
